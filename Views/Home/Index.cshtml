@{
    ViewData["Title"] = "Gerenciador de Eventos";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-4">
            <h2 class="fw-bold"><i class="fas fa-calendar-check"></i> Gerenciador de Eventos</h2>
        </div>
        <div class="card-body text-center">
            <p class="lead text-muted">Gerencie eventos e participantes de forma simples e eficiente.</p>

            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <a asp-controller="Evento" asp-action="Index" class="btn btn-lg btn-success w-100 rounded-3 shadow-sm py-3">
                        <i class="fas fa-calendar-alt"></i> Ver Eventos
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-controller="Participante" asp-action="Index" class="btn btn-lg btn-info w-100 rounded-3 shadow-sm py-3">
                        <i class="fas fa-users"></i> Ver Participantes
                    </a>
                </div>
            </div>

    
        </div>
    </div>
</div>

<style>
    .btn:hover {
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }
</style>
