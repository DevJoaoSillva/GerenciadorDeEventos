@model GerenciadorEventos.Models.Eventos

@{
    ViewData["Title"] = "Editar Evento";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <h2>Editar Evento</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EventoId" />

                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Data</label>
                    <input asp-for="Data" type="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Local</label>
                    <input asp-for="Local" class="form-control" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
