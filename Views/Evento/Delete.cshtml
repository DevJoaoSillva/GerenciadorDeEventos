@model GerenciadorEventos.Models.Eventos

@{
    ViewData["Title"] = "Excluir Evento";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Excluir Evento</h3>
        </div>
        <div class="card-body text-center">
            <p class="fs-5">Tem certeza de que deseja excluir este evento?</p>

            <div class="mb-3">
                <p><strong>Nome:</strong> @Model.Nome</p>
                <p><strong>Data:</strong> @Model.Data.ToShortDateString()</p>
                <p><strong>Local:</strong> @Model.Local</p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="EventoId" />

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-danger me-3">
                        <i class="fas fa-trash-alt"></i> Sim, Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
