@model GerenciadorEventos.Models.Eventos

@{
    ViewData["Title"] = "Criar Novo Evento";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Criar Novo Evento</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome do Evento</label>
                    <input asp-for="Nome" class="form-control" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Data" class="form-label">Data do Evento</label>
                    <input asp-for="Data" type="date" class="form-control" required />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Local" class="form-label">Local</label>
                    <input asp-for="Local" class="form-control" required />
                    <span asp-validation-for="Local" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
