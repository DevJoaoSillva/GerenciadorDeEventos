<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerenciador De Eventos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciadorEventos.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/ca" type="image/x-icon">
    <link rel="icon" href="~/calendario.ico" type="image/x-icon">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid bg-light py-2">
                <div class="d-flex justify-content-between align-items-center">

                    <!-- Botão "Toggle" para telas menores -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Menu de navegação -->
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav d-flex justify-content-center mt-3">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index">
                                Início
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Evento" asp-action="Index">
                                Evento
                            </a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Participante" asp-action="Index">
                                Participante
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GerenciadorEventos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
