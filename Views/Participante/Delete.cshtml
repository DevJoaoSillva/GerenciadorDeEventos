@model GerenciadorEventos.Models.Participantes

@{
    ViewData["Title"] = "Remover Participante";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2>Remover Participante</h2>
        </div>
        <div class="card-body">
            <p class="lead text-center">Tem certeza que deseja remover este participante?</p>

            <dl class="row">
                <dt class="col-sm-4">Nome:</dt>
                <dd class="col-sm-8">@Model.Nome</dd>

                <dt class="col-sm-4">Evento:</dt>
                <dd class="col-sm-8">@Model.Evento?.Nome</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ParticipanteId" />

                <div class="text-center">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Sim, Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
