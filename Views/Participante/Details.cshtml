@model GerenciadorEventos.Models.Participantes

@{
    ViewData["Title"] = "Detalhes do Participante";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">Detalhes do Participante</h3>
        </div>
        <div class="card-body text-center">
            <div class="mb-3">
                <p class="fs-5"><strong>Nome:</strong> @Model.Nome</p>
                <p class="fs-5"><strong>Email:</strong> @Model.Email</p>
                <p class="fs-5"><strong>Evento:</strong> @Model.Evento.Nome</p>
            </div>

            <div class="d-flex justify-content-center mt-4">
                @if (!Model.Participacao)
                {
                    <form asp-action="ConfirmarParticipacao" asp-route-id="@Model.ParticipanteId" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle"></i> Confirmar Participação
                        </button>
                    </form>
                }
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>
