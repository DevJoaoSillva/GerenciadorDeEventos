@model GerenciadorEventos.Models.Participantes

@{
    ViewData["Title"] = "Editar Participante";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white text-center">
            <h2>Editar Participante</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="ParticipanteId" />

                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Evento</label>
                    <select asp-for="EventoId" asp-items="ViewBag.EventoId" class="form-select" required>
                        <option value="">Selecione um evento</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
